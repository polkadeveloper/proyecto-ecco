---
import { ViewTransitions } from 'astro:transitions'
import FondoBlancoCuadros from '../components/FondoBlancoCuadros.astro'

interface Props {
  title: string
  description: string
}

const { title, description } = Astro.props
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <ViewTransitions />
    <title>{title}</title>
  </head>
  <body>
    <FondoBlancoCuadros>
      <slot />
    </FondoBlancoCuadros>
    <style is:global>
      html {
        font-family: 'Geist Medium', system-ui, sans-serif;
        font-size: 1.2rem;
        color: rgb(235, 235, 235);
        /* background-color: rgba(227, 227, 227, 0.825); */
        /* background-color: black; */
        scrollbar-width: thin;
        scrollbar-color: #7eb56a black;
      }

      @font-face {
        font-family: 'Geist Black';
        src: url('../../Fonts/Geist/Geist-Black.woff2');
      }

      .geist-black {
        font-family: 'Geist Black', sans-serif;
      }

      @font-face {
        font-family: 'Geist UltraBlack';
        src: url('../../Fonts/Geist/Geist-UltraBlack.woff2');
      }

      .geist-ultrablack {
        font-family: 'Geist UltraBlack', sans-serif;
      }

      @font-face {
        font-family: 'Geist Bold';
        src: url('../../Fonts/Geist/Geist-Bold.woff2');
      }

      .geist-bold {
        font-family: 'Geist Bold', sans-serif;
      }

      @font-face {
        font-family: 'Geist SemiBold';
        src: url('../../Fonts/Geist/Geist-SemiBold.woff2');
      }

      .geist-semibold {
        font-family: 'Geist SemiBold', sans-serif;
      }

      @font-face {
        font-family: 'Geist UltraLight';
        src: url('../../Fonts/Geist/Geist-UltraLight.woff2');
      }

      .geist-ultralight {
        font-family: 'Geist UltraLight', sans-serif;
      }

      @font-face {
        font-family: 'Geist Light';
        src: url('../../Fonts/Geist/Geist-Light.woff2');
      }

      .geist-light {
        font-family: 'Geist Light', sans-serif;
      }

      @font-face {
        font-family: 'Geist Medium';
        src: url('../../Fonts/Geist/Geist-Medium.woff2');
      }

      .geist-medium {
        font-family: 'Geist Medium', sans-serif;
      }

      @font-face {
        font-family: 'Geist Regular';
        src: url('../../Fonts/Geist/Geist-Regular.woff2');
      }

      .geist-regular {
        font-family: 'Geist Regular', sans-serif;
      }
    </style>
  </body>
</html>
